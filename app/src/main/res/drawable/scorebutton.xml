<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/scorePressed" />
            <gradient android:angle="-90" android:startColor="@color/scorePressed" android:endColor="@color/scorePressedSecond"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/scoreButton" />
            <solid android:color="@color/scoreButton"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/scoreButtonSecond" />
            <gradient android:angle="-90" android:startColor="@color/scoreButtonSecond" android:endColor="@color/scoreButton" />
        </shape>
    </item>
</selector>
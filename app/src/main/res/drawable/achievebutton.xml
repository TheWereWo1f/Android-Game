<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape android:shape="rectangle"  >
                <corners android:radius="15dip" />
                <stroke android:width="1dip" android:color="@color/achievPressed" />
                <gradient android:angle="-90" android:startColor="@color/achievPressed" android:endColor="@color/achievPressedTwo"  />
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle"  >
                <corners android:radius="15dip" />
                <stroke android:width="1dip" android:color="@color/achievSecondButton" />
                <solid android:color="@color/achievSecondButton"/>
            </shape>
        </item>
        <item >
            <shape android:shape="rectangle"  >
                <corners android:radius="15dip" />
                <stroke android:width="1dip" android:color="@color/achievSecondButton" />
                <gradient android:angle="-90" android:startColor="@color/achievSecondButton" android:endColor="@color/achievFirstButton" />
            </shape>
        </item>
</selector>